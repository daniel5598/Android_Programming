<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp">

   <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="30dp"
        android:gravity="right"
        android:background="#aaaaaa" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="1"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/n2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="2"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/n3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="3"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:textSize="25dp"
                android:text="+"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="4"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/n5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="5"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/n6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="6"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="-"
                android:textSize="25dp"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="7"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/n8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="8"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/n9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="9"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="*"
                android:textSize="25dp"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="0"
                android:textSize="25dp"
                android:layout_weight="1" />
            <Button android:id="@+id/ndot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="."
                android:textSize="30dp"
                android:layout_weight="1" />
            <Button android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="clear"
                android:textSize="20dp"
                android:layout_weight="1" />
            <Button android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="/"
                android:textSize="25dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ok"
        android:textSize="30dp"/>
</LinearLayout>